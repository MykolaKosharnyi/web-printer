			<name>nameOfAttribyte</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		
		<attribute>
			<name>properties</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<type>org.json.simple.JSONArray</type>
		</attribute>
	</tag>
	
