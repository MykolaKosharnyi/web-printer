<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.nk.printmaster.entities.OrderPrinter" table="order_printer">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		
		<many-to-one name="user" class="com.nk.printmaster.entities.User">
			<column name="user_id" not-null="true"/>
		</many-to-one>		

		<many-to-one name="printer" class="com.nk.printmaster.entities.Printer">
			<column name="printer_id" not-null="true"/>
		</many-to-one>
		
		<property name="timeOrder" column="time_order" type="date"/>
		<property name="amount" column="amount" type="int"/>
	</class>
</hibernate-mapping>